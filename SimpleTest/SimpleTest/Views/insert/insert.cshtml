@model SimpleTest.Models.insert
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string MsgNo = "";
    if (ViewBag.MsgNo != null)
    {
        MsgNo = ViewBag.MsgNo;
    }
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#reset").click(function () {
            parent.$.colorbox.close();
        });
    });

</script>

@using (Html.BeginForm("insert", "insert", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <p>@Html.ValidationMessageFor(e => e.ErrorMessage) </p>
    <br />
    <div>
        <div class="editor-label">
            設定卡號區間
            @Html.TextBoxFor(model => model.P_cCardStart, new { @size = "20", id = "CardStart" })
            @Html.ValidationMessageFor(model => model.P_cCardStart)
            ~
            @Html.TextBoxFor(model => model.P_cCardEnd, new { @size = "20", id = "CardEnd" })
            @Html.ValidationMessageFor(model => model.P_cCardEnd)
        </div>
        <div class="editor-label">
            輸入領獎專區活動ID
            @Html.TextBoxFor(model => model.P_cActID, new { @size = "15" }) (非必填)
            @Html.ValidationMessageFor(model => model.P_cActID)
        </div>
        <br />
        <p>
            @if (MsgNo != "1")
            {
                <input type="submit" value="確定" />
            }
            &nbsp;&nbsp;&nbsp;
             <input type="reset" id="reset" value="取消" />
        </p>
    </div>
}


